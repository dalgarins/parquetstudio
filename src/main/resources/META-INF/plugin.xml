<idea-plugin>
    <id>com.github.jhordyhuaman.parquetstudio</id>
    <name>Parquet Studio</name>
    <description>Professional CRUD editor for Parquet files using DuckDB. Open, edit, search, and save Parquet files directly in IntelliJ IDEA.</description>
    <version>1.0.0</version>
    <vendor email="jhordyhuaman@example.com" url="https://github.com/jhordyhuaman">Jhordy Huaman</vendor>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Parquet Studio"
                    anchor="right"
                    factoryClass="com.github.jhordyhuaman.parquetstudio.factory.ParquetToolWindowFactory"
                    icon="/icons/parquet_studio.svg"/>
        <fileTypeFactory implementation="com.github.jhordyhuaman.parquetstudio.filetype.ParquetFileTypeFactory"/>
        <fileEditorProvider implementation="com.github.jhordyhuaman.parquetstudio.factory.ParquetEditorProvider"/>
    </extensions>
</idea-plugin>
